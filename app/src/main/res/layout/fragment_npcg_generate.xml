<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="character" type="de.arsartificia.dev.sr2go.Character"/>
    </data>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonFirstName"
                        style="@style/BigButton"
                        android:text="@{character.firstname}"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <Button
                        android:id="@+id/buttonLastName"
                        style="@style/BigButton"
                        android:text="@{character.lastname}"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonNickName"
                    style="@style/BigButton"
                    android:text="@{character.nickname}"
                    android:layout_width="match_parent"
                    android:layout_height="61dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonAge"
                        style="@style/BigButton"
                        android:text="@{character.age}"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <Button
                        android:id="@+id/buttonGender"
                        style="@style/BigButton"
                        android:text="@{character.gender}"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5" />

                <Button
                    android:id="@+id/buttonMood"
                    style="@style/BigButton"
                    android:text="@{character.personal.mood}"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/buttonMembershipAndEthics"
                    android:layout_width="match_parent"
                    style="@style/BigButton"
                    android:text="Membership and Ethics :"
                    android:textAlignment="center"
                    android:layout_height="42dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@{character.personal.membership}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <TextView
                        android:text="@{character.personal.ethics}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonPersonalSpecialAndRelationship"
                    android:layout_width="match_parent"
                    style="@style/BigButton"
                    android:text="Personal Traits and Relationship :"
                    android:textAlignment="center"
                    android:layout_height="42dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@{character.personal.personalSpecial}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <TextView
                        android:text="@{character.personal.relationship}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonHead"
                    android:layout_width="match_parent"
                    style="@style/BigButton"
                    android:text="Head :"
                    android:textAlignment="center"
                    android:layout_height="42dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@{character.visuals.eyes}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <TextView
                        android:text="@{character.visuals.hair}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@{character.visuals.face}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <TextView
                        android:text="@{character.visuals.visualsSpecial}"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonBody"
                    android:layout_width="match_parent"
                    style="@style/BigButton"
                    android:text="Body :"
                    android:textAlignment="center"
                    android:layout_height="42dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="weight"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <TextView
                        android:text="height"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="figure"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                    <TextView
                        android:text="special"
                        style="@style/BigTextView"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="42dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_shake"
                    android:scaleType="center"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_star"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>
